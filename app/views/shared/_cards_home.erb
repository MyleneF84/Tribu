      <% @last_events.each do |event| %>
        <div class="card-home shadow-sm p-3 mb-5 bg-white" style="width: 18rem;">
          <div class="d-block mb-3 mx-auto photo rounded text-center" >
            <% if event.photo.present? %>
              <%= cl_image_tag event.photo.key, height: 150, width: 200, crop: :fill, class: "align-self-center rounded"%>
