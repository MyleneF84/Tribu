
<div class="container mt-5 mb-6">
  <div class="row col-sm-12">
    <h3> Evenements locaux Ã  la carte </h2>
    <div class="p-3 px-3 mb-2 ">
      <% @last_events.each do |event| %>
      <div class="card" style="border: 1px solid grey rounded;">
          <%= link_to event_path(event), class: "clickable-cards" do %>
          <div class="text-container">
            <div class="photo mb-3 mt-5 text-center rounded mx-auto d-block" >
              <% if event.photo.present? %>
                <%= cl_image_tag event.photo.key, height: 150, width: 200, crop: :fill, class: "align-self-center rounded"%>
                <% end %>
            </div>
            <div class="d-flex flex-column justify-content-around align-items-center block-text-card">
              <h3> <%= event.name %></h3>
              <h5> <%= event.address %></h5>
              <p class="line-clamp description-text"><%= event.description %></p>
            </div>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row mx-0 w-100 px-4">
  <div class="col-8 ">
    <div class="d-flex flex-wrap justify-content-center">
      <% @events.each do |event|%>
        <div class="p-3 m-3 border rounded shadow-tribu" style="width: 30%;">
          <div class="photo mb-3 mt-5 text-center rounded mx-auto d-block" >
            <% if event.photo.present? %>
              <%= cl_image_tag event.photo.key, height: 150, width: 200, crop: :fill, class: "align-self-center rounded"%>
            <% end %>
          </div>
          <p><%= link_to event.name, event_path(event) %><br></p>
          <%= event.address %>
          <%= event.description %></p>
          <p>Du <%= event.start_at %>
          au <%= event.end_at %></p>
          <% event.category.each do |category| %>
            <span class="badge tag-price rounded-pill mb-auto end-100"><p><%= category %></p></span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>