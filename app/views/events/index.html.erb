
<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-10">
      <div class="card-form mt-4 mb-4 p-4 form-query">
        <h3 class="heading m-3 text-center">Trouvez le prochain évènement local près de vous </h3>
        <div class="d-flex justify-content-center px-5">
        <%# raise %>
          <%= simple_form_for :query, url: events_path, method: :get, html: { class: 'bg-white d-flex p-2 query rounded-pill justify-content-between' } do |f| %>
            <%= f.input :city, placeholder: 'ville, commune, code postal...', label: false,
                        input_html: { class: 'bg-white border-0 form-control mx-2 w-100', value: (params[:query][:city] if params[:query])},
                        wrapper_html: { class: 'mb-0-important w-100' } %>
            <%= f.input :start_date, as: :date, html5: true, placeholder: '01-01-2022', label: false,
                        input_html: { class: 'bg-white border-0 form-control mx-2 w-100', value: (params[:query][:start_date] if params[:query])},
                        wrapper_html: { class: 'mb-0-important w-100' } %>
            <%= f.input :end_date,  as: :date, html5: true, placeholder: '01-02-2022', label: false,
                        input_html: { class: 'bg-white border-0 form-control mx-2 w-100', value: (params[:query][:end_date] if params[:query])},
                        wrapper_html: { class: 'mb-0-important w-100' } %>
            <%# <%= f.input :categories, as: :check_boxes %> 
            <button class="px-4 py-2 text-white rounded-pill bg-saumon border-0"><i class="fa-solid fa-magnifying-glass"></i></button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="d-flex align-items-center flex-wrap justify-content-center">
  <% @events.each do |event|%>
    <div class="p-3 m-3 w-25 border rounded">

    <p><%= link_to event.name, event_path(event) %><br>
    <%= event.description %></p>
    <p>Du <%= event.start_at %>
    au <%= event.end_at %></p>
    <%# Organisée par : <%= event.user.first_name %>
    </div>
  <% end %>
</div>

<%= link_to "New event", new_event_path if policy(Event).new? %>
