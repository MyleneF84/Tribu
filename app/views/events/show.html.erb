<div class="container">
  <div class="row justify-content-center mt-3">
    <%= render "shared/card_product_infos", event: @event %>
    <%= render "shared/card_product_map" %>
  </div>
</div>

<% unless current_user&.id == @event.user_id %>
  <div class="mt-3 w-100">
    <%= render "bookings/form", event: @event, booking: @booking %>
  </div>
<% end %>

<% if policy(@event).edit? %>
  <%= link_to "Edit this event", edit_event_path(@event) %> |
<% end %>

<%= button_to "Destroy this event", @event, data: {turbo_method: :delete} if policy(@event).destroy? %>


