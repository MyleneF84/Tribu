<div class="container">

<div class="form-event m-5 p-5 shadow-lg">
<h1 class="mb-5 text-center">Cr√©ez votre evenement</h1>

<h6 class= "text-end">Your are connected as : <%= current_user.first_name %></h6>   
  <%= simple_form_for(@event) do |f| %>
    <%= f.input :photo, as: :file %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :phone_number%>
    <%= f.input :price %>
    <%= f.input :category, collection: Event::LIST, as: :check_boxes %>
    <%= f.input :start_at %>
    <%= f.input :end_at %>
    <%= f.input :number_of_participants%>
    <div class="text-center mt-5"><%= f.submit "#{ @event.persisted? ? 'Update' : 'Create' } my event", class: 'btn bg-purple' %></div>  
  <% end %>
<%#= link_to "Back to Home", root_path %>

</div>

</div>


